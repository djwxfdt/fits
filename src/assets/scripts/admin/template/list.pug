.list-view
    .head
        .ops
            .btn.btn-default(v-on:click="deleteItem") 删除
    .list-container
        .header
            .col.col-1 选择
            .col.col-5 标题
            .col.col-2 时间 
            .col.col-1 阅读数
            .col.col-1 编辑
            
        .list
            .item(v-for="item in list")
                .col.col-1 
                    input(type="checkbox" v-model="checkboxes" v-bind:value="item.id" v-bind:id="item.id")
                .col.col-6 {{item.title}}
                .col.col-2 {{item.date}} 
                .col.col-1 0
                .col.col-1 
                    router-link(:to="'/edit/'+ item.id") 编辑
                
            
             
            

    
            
